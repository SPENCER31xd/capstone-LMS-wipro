# Library Management System Environment Configuration

# Flask Backend Configuration
FLASK_APP=app.py
FLASK_ENV=production
FLASK_DEBUG=false

# Database Configuration
DATABASE=/app/data/library.db
DATABASE_URL=sqlite:///app/data/library.db

# JWT Configuration
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ACCESS_TOKEN_EXPIRES=24

# Server Configuration
HOST=0.0.0.0
PORT=5000

# CORS Configuration
CORS_ORIGINS=http://localhost:80,http://localhost:4200,http://localhost:3000

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/app/logs/library_app.log

# Security Configuration
SECRET_KEY=your-super-secret-key-change-in-production
BCRYPT_LOG_ROUNDS=12

# Rate Limiting
RATELIMIT_DEFAULT=100/hour
RATELIMIT_STORAGE_URL=memory://

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

